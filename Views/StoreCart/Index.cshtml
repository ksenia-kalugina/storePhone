@model StoreCartViewModel

    <div class="container marketing itemDetail">
        <h1>Корзина</h1>
        @if (Model.storeCart.listStoreItems.Count == 0)
        {
            <h3 align="center">Пусто</h3>
        }
        @foreach (var el in Model.storeCart.listStoreItems)
        {
            @if (el.user.Email == User.Identity.Name)
            {

                <div>

                    <div class="alert alert-warning mt-3 infoBucket">
                        <div class="divImgBucket"><img class="bucketImg" src="@el.phone.img" /></div>
                        <b>Телефон:</b> @el.phone.name<br />
                        <b>Цена:</b> @el.phone.price.ToString("c")
                        <p><a class="btn btn-warning delete" asp-controller="StoreCart" asp-action="removeToCart" asp-route-idPhone="@el.phone.id" asp-route-nameUser="@User.Identity.Name">Удалить</a></p>
                    </div>


                </div>
            }


        }
    </div>
    