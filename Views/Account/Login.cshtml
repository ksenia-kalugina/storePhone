
@model StorePhone.ViewModel.LoginModel

<h2>Вход на сайт</h2>



<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label asp-for="Email">Введите логин</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <a class="btn btn-warning" asp-action="Register" asp-controller="Account">Регистрация</a>
            <input class="btn btn-warning" type="submit" value="Войти"/>
        </div>
    </div>
</form>
